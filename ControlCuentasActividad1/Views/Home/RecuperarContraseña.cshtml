
@{
    Layout = "_Layout";
}

<h2>Recuperar contraseña</h2>

<section class="formulario">
    <form method="post" action="~/Home/RecuperarContraseña">
        <label>Email:</label>
        <input type="email" required name="correo"/><br />
        <input type="submit" value="Recuperar Contraseña" />
        @Html.ValidationSummary()
        <p>Te enviaremos un correo electronico para recuperar tu contraseña</p>
    </form>
</section>

